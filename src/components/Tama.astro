---
// Import your HLSPlayer component
import HLSPlayer from "./HLSPlayer.astro";
// Directly import the initialize function from your TypeScript file
import type initializeTama from "../scripts/initializeTama";
---

<div class="tama-container" id="tama-container">
  <div class="keychain">
    <div class="keychain-loop"></div>
    <!-- Add more keychain details here if needed -->
  </div>
  <div class="tama-body">
    <HLSPlayer class="hls-player" />
    <div class="button-container">
      <button id="btnA">A</button>
      <button id="btnB">B</button>
      <button id="btnC">C</button>
    </div>
  </div>
</div>

<script>
  // Call the initialize function when the component is mounted in the browser
  import initializeTama from "../scripts/initializeTama.js";
  initializeTama();
</script>

<style>
  .tama-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 250px;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: grab;
    z-index: 1000;
  }

  .keychain {
    width: 4px;
    height: 60px;
    background-color: #999;
    border-radius: 2px;
    margin-bottom: -30px; /* Half of the height to pull it into the tama body */
    position: relative;
    z-index: 10;
  }

  .keychain:before {
    content: "";
    position: absolute;
    top: -25px; /* Adjust as needed */
    left: 50%;
    transform: translateX(-50%);
    width: 10px;
    height: 10px;
    background-color: #999;
    border: 3px solid #ddd;
    border-radius: 50%;
    z-index: 1;
  }

  .keychain:after {
    content: "";
    position: absolute;
    top: -15px; /* Adjust as needed */
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 20px;
    border-radius: 10px; /* Half of the width and height */
    border: 4px solid #999;
    z-index: -1;
  }

  .tama-body {
    background-color: #fff;
    border: 3px solid #000;
    border-radius: 50%; /* This will make the body round */
    width: 300px; /* Adjust width for your design */
    height: 300px; /* Adjust height to maintain aspect ratio for a circle */
    overflow: hidden; /* Ensure the video corners don't stick out */
    position: relative;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .hls-player video {
    width: 100%;
    height: auto;
    border-radius: 50%; /* Round the video edges */
  }

  .button-container {
    position: absolute;
    bottom: 20px; /* Position buttons at the bottom of the tama body */
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .button-container button {
    margin: 0 5px; /* Space between buttons */
    /* Additional button styles */
  }
</style>
